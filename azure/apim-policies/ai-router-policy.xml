<!--
  SEOBAIKE AI Router — Azure API Management Policy
  所有 AI 請求的外層驗證：Entra ID → 速率限制 → 路徑檢查 → 轉發
  專利 115100981
-->
<policies>
    <inbound>
        <!-- 1. Microsoft Entra ID 驗證（唯一 Owner Root） -->
        <validate-azure-ad-token tenant-id="{{entra-tenant-id}}">
            <client-application-ids>
                <application-id>{{seobaike-app-id}}</application-id>
            </client-application-ids>
            <required-claims>
                <claim name="roles" match="any">
                    <value>AI.Inference</value>
                    <value>Admin.Full</value>
                </claim>
            </required-claims>
        </validate-azure-ad-token>

        <!-- 2. 速率限制（防止燒額度） -->
        <rate-limit-by-key
            calls="100"
            renewal-period="60"
            counter-key="@(context.Request.Headers.GetValueOrDefault('Authorization','anonymous'))" />

        <!-- 3. 記錄請求（審計追蹤） -->
        <set-variable name="request-id" value="@(Guid.NewGuid().ToString())" />
        <set-variable name="request-time" value="@(DateTime.UtcNow.ToString("o"))" />

        <!-- 4. 注入 SEOBAIKE 標頭 -->
        <set-header name="X-SEOBAIKE-Request-Id" exists-action="override">
            <value>@((string)context.Variables["request-id"])</value>
        </set-header>
        <set-header name="X-SEOBAIKE-Patent" exists-action="override">
            <value>115100981</value>
        </set-header>
        <set-header name="X-SEOBAIKE-Pipeline" exists-action="override">
            <value>entra-verified</value>
        </set-header>

        <!-- 5. 轉發到 Azure Functions L1→L4 Pipeline -->
        <set-backend-service base-url="{{l1-l4-pipeline-url}}" />
    </inbound>

    <backend>
        <forward-request timeout="30" />
    </backend>

    <outbound>
        <!-- 6. 回傳時注入控制標頭 -->
        <set-header name="X-SEOBAIKE-Processed-By" exists-action="override">
            <value>azure-apim</value>
        </set-header>
        <set-header name="X-SEOBAIKE-Owner" exists-action="override">
            <value>小路光有限公司</value>
        </set-header>

        <!-- 7. 移除內部標頭（不暴露） -->
        <set-header name="X-Powered-By" exists-action="delete" />
        <set-header name="X-AspNet-Version" exists-action="delete" />

        <!-- 8. CORS -->
        <cors allow-credentials="true">
            <allowed-origins>
                <origin>https://aiforseo.vip</origin>
                <origin>https://seobaike.framer.website</origin>
            </allowed-origins>
            <allowed-methods>
                <method>GET</method>
                <method>POST</method>
                <method>OPTIONS</method>
            </allowed-methods>
            <allowed-headers>
                <header>Authorization</header>
                <header>Content-Type</header>
            </allowed-headers>
        </cors>
    </outbound>

    <on-error>
        <set-header name="X-SEOBAIKE-Error" exists-action="override">
            <value>@(context.LastError.Message)</value>
        </set-header>
        <return-response>
            <set-status code="500" reason="Pipeline Error" />
            <set-body>@{
                return new JObject(
                    new JProperty("error", "pipeline_error"),
                    new JProperty("detail", context.LastError.Message),
                    new JProperty("patent", "115100981"),
                    new JProperty("owner", "SEOBAIKE")
                ).ToString();
            }</set-body>
        </return-response>
    </on-error>
</policies>
