    <body name="doc1" pos="-0.5 0 0.44">
      <joint type="free"/>
      <geom size="0.1 0.07 0.005" type="box" mass="0.05" material="paper"/>
    </body>
    <body name="doc2" pos="-0.5 0.02 0.45">
      <joint type="free"/>
      <geom size="0.1 0.07 0.005" type="box" mass="0.05" rgba="0.9 0.9 0.85 1"/>
    </body>
    <body name="base" pos="0 0.3 0.42">
      <geom size="0.08 0.03" type="cylinder" material="steel"/>
      <body name="turret" pos="0 0 0.06">
        <joint name="base_rotate" pos="0 0 0" axis="0 0 1" range="-3.14159 3.14159" damping="8"/>
        <geom size="0.06 0.04" type="cylinder" material="blue"/>
        <body name="upper_arm" pos="0 0 0.08">
          <joint name="shoulder" pos="0 0 0" axis="0 1 0" range="-1.5708 1.5708" damping="5"/>
          <geom size="0.035 0.18" type="capsule" material="blue"/>
          <body name="forearm" pos="0 0 0.36">
            <joint name="elbow" pos="0 0 0" axis="0 1 0" range="-2.26893 0" damping="4"/>
