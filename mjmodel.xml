                <geom size="0.008 0.015 0.03" type="box" material="red"/>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <general joint="base_rotate" ctrlrange="-30 30"/>
    <general joint="shoulder" ctrlrange="-40 40"/>
    <general joint="elbow" ctrlrange="-40 40"/>
    <general joint="wrist" ctrlrange="-15 15"/>
    <general joint="grip_left" ctrlrange="-5 5"/>
    <general joint="grip_right" ctrlrange="-5 5"/>
  </actuator>
