              <joint name="wrist" pos="0 0 0" axis="1 0 0" range="-1.5708 1.5708" damping="2"/>
              <geom size="0.025 0.02" type="cylinder" material="steel"/>
              <body name="grip_l" pos="-0.03 0 0.04">
